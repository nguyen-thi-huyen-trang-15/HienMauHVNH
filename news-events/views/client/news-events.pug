doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title News - Events
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="../css/reset.css")
    link(rel="stylesheet" href="./css/news-events.css")
  body
    .fullContainer.banner(id="homeSection")
      header
        .container
          .logo
            img(src="../../images/logo.png" alt="NGO logo")
          nav
            ul
              li
                a(href="../home/index.html") Quay lại trang chủ
    section.fullContainer(id="aboutSection")
      .container
        .newsSection
          each newsItem in news
            .newsItem
              h3= newsItem.title
              img(src=newsItem.thumbnail alt=newsItem.title)
              .newsContent
                p= newsItem.description
                button.detailButton(onclick=`toggleDetails('${newsItem.id}')`) Xem chi tiết
                .newsDetails(id=newsItem.id)
                  p= newsItem.content
                  if newsItem.link
                    p
                      a.register-link(href=newsItem.link target="_blank") Đăng kí hiến máu

  nav
    ul(class="pagination")
      if pagination.currentPage > 1
        li(class="page-item")
          button(
            class="page-link"
            data-pagination=pagination.currentPage - 1
          ) Trang trước
      
      each i in [...Array(pagination.totalPage).keys()]
        li(class=`page-item ${pagination.currentPage === (i + 1) ? "active" : ""}`)
          button(
            class="page-link"
            data-pagination=i + 1
          ) #{i + 1}

      if pagination.currentPage < pagination.totalPage
        li(class="page-item")
          button(
            class="page-link"
            data-pagination=pagination.currentPage + 1
          ) Kế tiếp

    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
    script(src="../../js/news.js")
